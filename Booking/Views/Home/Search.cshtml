@model Booking.WEB.ViewModels.SearchTrainsViewModel

@{
    ViewBag.Title = "Search";
}

<script src="@Url.Content("~/Scripts/search.view.js")" type="text/javascript"></script>



<div class="welcome" id="shadow" style="height:400px">

    <div class="searchform">
        @using (Ajax.BeginForm("SearchTrains","Home", new AjaxOptions { UpdateTargetId = "results" }, new { @id = "registerFormId" }))
        {
            <br />
            <br />
            <br />
            <br />
            <br />
            @Html.AntiForgeryToken()

            <div class="form-horizontal center-block">
                <table width="100%" align="center">
                    <tr>
                        <td>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.FromStation, htmlAttributes: new { @class = "control-label col-md-2 labelstyle" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.FromStation, new { htmlAttributes = new { @class = "form-control editorsize", completesource = "/Home/AutoСompleteSearch" } })
                                    @Html.ValidationMessageFor(model => model.FromStation, "", new { @class = "text-danger" })
                                  
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ToStation, htmlAttributes: new { @class = "control-label col-md-2 labelstyle" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ToStation, new { htmlAttributes = new { @class = "form-control editorsize", completesource = "/Home/AutoСompleteSearch" } })
                                    @Html.ValidationMessageFor(model => model.ToStation, "", new { @class = "text-danger" })

                                    
                                </div>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <div class="form-group">
                                @Html.LabelFor(model => model.DateOfDeparture, htmlAttributes: new { @class = "control-label col-md-2 labelstyle" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.DateOfDeparture, new { htmlAttributes = new { @class = "form-control editorsize" } })
                                    @Html.ValidationMessageFor(model => model.DateOfDeparture, "", new { @class = "text-danger" })
                                  
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                @Html.LabelFor(model => model.TimeOfDeparture, htmlAttributes: new { @class = "control-label col-md-2 labelstyle" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model => model.TimeOfDeparture, Model.times, new { @class = "form-control editorsize" })
                                    @Html.ValidationMessageFor(model => model.TimeOfDeparture, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </td>
                    </tr>
                </table>
                <br />
                <div class="form-group">
                    <div class="searchbutton">
                        <input style="margin-left:200px; border:0px" type="submit" value="Знайти" class="btn btn-primary btn-lg btn-block" />
                    </div>
                </div>
            </div>

        }
    </div>
</div>
<br />
<br />
<div id="results"></div>
