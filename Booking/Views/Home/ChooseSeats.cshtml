@model Booking.ViewModels.CarInfoViewModel


@{
    ViewBag.Title = "ChooseSeats";
}

@{
    if (Model.ChosenSeats.Count == 0)
    {
        <p><center><b>Ви не обрали місця у вагоні.</b></center></p>
    }
    else
    {
        if (Model.ChosenSeats.Count > 4)
        {
            <p><center><b>Не можна обирати більше 4 місць за раз.</b></center></p>
        }
        else
        {
            <table class="table table-hover">
                <thead class="thead-style">
                    <tr>

                        <th>Номер вагона</th>
                        <th>Тип вагона</th>
                        <th>Обрані місця</th>
                    </tr>
                </thead>

                <tr>
                    <td>
                        @Model.Number
                    </td>
                    <td>
                        @Model.Name
                    </td>

                    <td>
                        @foreach (var seatnum in Model.ChosenSeats)
                        {
                            <p>@seatnum.Number</p>
                        }

                    </td>

                </tr>

            </table>
            <p><center><b>Загальна ціна: @Model.ChosenSeats.Sum(x => x.Price).ToString() UAH</b></center></p>
            <br />
            @Html.ActionLink("Забронювати", "PeopleForms","Person", null, new { @class = "btn btn-primary btn-lg" })
        }
    }
}


