@model Booking.ViewModels.CarInfoViewModel

@{
    ViewBag.Title = "LuxuryCar";
    TempData["TrainInfo"] = ViewBag.TrainInfo;

}

<link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

<style>
    .wagonborder {
        width: 100%;
        height: 160px;
        position: relative !important;
        border-style: solid;
        border-width: 5px;
        background-color: none;
        border-color: #152F62;
        border-radius: 18px 18px 18px 18px;
    }

    .evenplace {
        display: inline-block !important;
        background-color: #152F62;
        width: 35px;
        height: 60px;
        position: absolute !important;
        text-align: center;
        top: 5px;
        padding-top: 15px;
        margin-top: 8px;
        margin-left: 15px;
        color: #E8F0FF;
    }

    .wall {
        height: 80px;
        display: inline-block !important;
        border-left: 3px solid #152F62;
        position: absolute !important;
        margin-left: 30px;
    }

    .toilet {
        display: inline-block !important;
        position: absolute !important;
        top: 10px;
    }
     .lowwall {
        height: 50px;
        display: inline-block !important;
        border-left: 3px solid #152F62;
        position: absolute !important;
        margin-left: 30px;
        top:100px;
    }
</style>



<div class="wagonborder">
    @{
        int left = 48;
        string leftpx = String.Format("{0}px", left);
        <div class="wall" style="left:5px"></div>
        <img src="https://booking.uz.gov.ua//i/img/coach/toilet_full.png" style="left:40px" class="toilet" />
        <div class="wall" style="left:@leftpx"></div>
        string leftpxwall;
        left = 70;
        for (int i = 1; i <= Model.CountOfSeats; i++)
        {
            leftpx = String.Format("{0}px", left);
            leftpxwall = String.Format("{0}px", left + 25);
            int a = i + 1;

            <div class="evenplace" style="left:@leftpx; "> @a</div>

            <div class="wall" style="left:@leftpxwall"></div>


            left = left + 50;

        }
        <div class="lowwall" style="left:5px"></div>
        <img src="https://booking.uz.gov.ua//i/img/coach/toilet_full.png" style="left:1080px" class="toilet" />
        <div class="wall" style="left:1085px"></div>
        <div class="lowwall" style="left:1085px"></div>
        <br />
    }
</div>



