@model List<Booking.ViewModels.PersonViewModel>

@{
    ViewBag.Title = "PeopleForms";
    List<Booking.ViewModels.SelectedSeat> ChosenSeats = ViewBag.ChosenSeats;
}

<br />
<br />
<br />
<script src="@Url.Content("~/Scripts/user.validation.js")"></script>


@using (Html.BeginForm("PeopleForms", "Person", FormMethod.Post, new { @id = "personFormId" }))
{

    for (int i = 0; i < Model.Count(); i++)
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Місце пасажира - @ChosenSeats[i].Number.</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model[i].Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model[i].Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model[i].Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model[i].Surname, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model[i].Surname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model[i].Surname, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model[i].Patronymic, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model[i].Patronymic, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model[i].Patronymic, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model[i].DateOfBirth, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model[i].DateOfBirth, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model[i].DateOfBirth, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model[i].Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model[i].Email, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model[i].Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model[i].Phone, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model[i].Phone, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model[i].Phone, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


    }
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Підтвердити бронювання" class="btn btn-primary btn-lg"  />
        </div>
    </div>

}
